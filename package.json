{
  "name": "project-reversi-othello-ai",
  "version": "1.0.0",
  "description": "AI-powered Reversi (Othello) game built with vanilla JavaScript",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 8080 -o",
    "dev": "npx live-server --port=8080 --open=/index.html",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:accessibility": "playwright test tests/accessibility.spec.js",
    "test:performance": "playwright test tests/performance.spec.js",
    "lint": "echo 'ESLint not configured yet'",
    "format": "echo 'Prettier not configured yet'"
  },
  "keywords": [
    "othello",
    "reversi",
    "game",
    "javascript",
    "ai",
    "board-game"
  ],
  "author": "Trae AI",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/Project-Reversi-Othello-AI-powered-by-Trae.git"
  },
  "homepage": "https://your-username.github.io/Project-Reversi-Othello-AI-powered-by-Trae/",
  "bugs": {
    "url": "https://github.com/your-username/Project-Reversi-Othello-AI-powered-by-Trae/issues"
  }
}
